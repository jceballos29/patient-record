generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Office {
  id        String @id @default(cuid())
  name      String

  patients  Patient[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Patient {
  id        String @id @default(cuid())
  firstName String
  lastName  String
  type      PatientType @default(SESSIONS)

  defaultSessionPrice Decimal? @db.Decimal(10, 2)

  officeId String
  office   Office @relation(fields: [officeId], references: [id])
  
  sessions       Session[]
  authorizations Authorization[]
  payments       Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id        String        @id @default(cuid())
  patientId String
  date      DateTime
  status    SessionStatus @default(SCHEDULED)

  price Decimal? @db.Decimal(10, 2)
  
  patient Patient @relation(fields: [patientId], references: [id])

  authorizationId String?
  authorization   Authorization? @relation(fields: [authorizationId], references: [id])

  payment   Payment?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Authorization {
  id              String   @id @default(cuid())
  maxSessions     Int
  usedSessions    Int     @default(0)
  price      Decimal? @db.Decimal(10, 2)
  status    AuthorizationStatus @default(ACTIVE)

  sessions    Session[]

  patientId String
  patient   Patient @relation(fields: [patientId], references: [id])

  payment   Payment?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Payment {
  id          String   @id @default(cuid())
  amount      Decimal  @db.Decimal(10, 2)
  paidAt      DateTime @default(now())
  patientId   String
  patient     Patient  @relation(fields: [patientId], references: [id])
  sessionId   String?  @unique
  session     Session? @relation(fields: [sessionId], references: [id])
  authorizationId String? @unique
  authorization   Authorization? @relation(fields: [authorizationId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum SessionStatus {
  SCHEDULED // Agendada
  COMPLETED // Completada
  CANCELLED // Cancelada
}

enum AuthorizationStatus {
  ACTIVE    // Activa
  EXPIRED   // Expirada
  USED_UP   // Usada completamente
  SUSPENDED // Suspendida
}

enum PatientType {
  SESSIONS
  AUTHORIZATIONS
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}